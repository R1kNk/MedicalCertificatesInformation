@model MedicalCertificates.Web.Models.HealthGroupViewModels.EditHealthGroupViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>EditHealthGroupViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="editHealthGroupForm" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </form>
        <button onclick="SendEditHealthGroupRequest(@Model.Id)" class="btn btn-default">Изменить</button>

    </div>
</div>

<div>
    <a onclick="GetIndexHealthGroupRequest()">Вернуться к списку</a>
</div>

