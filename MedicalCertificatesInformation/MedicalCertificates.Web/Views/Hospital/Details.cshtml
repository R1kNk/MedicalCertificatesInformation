@model MedicalCertificates.Web.Models.HospitalViewModels.DetailsHospitalViewModel

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <p class="form-control-static">@Model.Name</p>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="TelephoneNumber"></label>
            <p class="form-control-static">@Model.TelephoneNumber</p>
        </div>
        @{ 
            foreach(var cert in Model.MedicalCertificates)
            {
        <div>
            <p class="form-control-static">@cert.StartDate</p>
            <p class="form-control-static">@cert.FinishDate</p>
            <p class="form-control-static">@cert.CertificateTerm</p>
            <p class="form-control-static">@cert.Student.Name</p>
            <p class="form-control-static">@cert.Student.Surname</p>
            <p class="form-control-static">@cert.PhysicalEducation.Name</p>

        </div>
            }
        }
        <a asp-action="Edit" asp-controller="Hospital" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
