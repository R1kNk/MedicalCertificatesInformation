@model MedicalCertificates.Web.Models.MedicalCertificatesViewModels.DeleteMedicalCertificateViewModel


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title" id="lineModalLabel">Вы уверены что вы хотите удалить информацию о этой справке?</h3>
        </div>
        <div class="modal-body">
            <form asp-action="Delete" id="deleteMedicalCertificateForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" hidden>
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                @{
                    var owner = Model.Student.Surname + " " + Model.Student.Name;
                }
                <div class="form-check form-check-inline">
                    <label class="control-label">Владелец</label>
                    <h4 readonly>@owner</h4>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <h4 readonly>@Model.StartDate.ToString("yyyy.MM.dd")</h4>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group" id="finishDateBlock">
                    <label asp-for="FinishDate" class="control-label"></label>
                    <h4 readonly>@Model.FinishDate.ToString("yyyy.MM.dd")</h4>
                    <span asp-validation-for="FinishDate" class="text-danger"></span>

                </div>
                </form>
        </div>
        <div class="modal-footer">
            <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                <div class="btn-group" role="group">
                    <button type="button" onclick="SendDeleteMedicalCertificateRequest();" class="btn btn-danger">Да</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" role="button">Нет</button>
                </div>
            </div>
        </div>
    </div>
</div>