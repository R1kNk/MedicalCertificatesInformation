@model MedicalCertificates.Web.Models.GroupViewModels.DeleteGroupViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title" id="lineModalLabel">Вы уверены что вы хотите удалить информацию о этой группе?</h3>
        </div>
        <div class="modal-body">
            <form asp-action="Delete" id="deleteGroupForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <h4 readonly>@Model.Name</h4>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                <div class="btn-group" role="group">
                    <button type="button" onclick="SendDeleteGroupRequest();" class="btn btn-danger">Да</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" role="button">Нет</button>
                </div>
            </div>
        </div>
    </div>
</div>
