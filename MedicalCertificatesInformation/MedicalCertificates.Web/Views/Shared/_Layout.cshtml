<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicalCertificates.Web</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/main-content.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-datetimepicker-master/src/css/bootstrap-datetimepicker.min.css" />


    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/main-content.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-datetimepicker-master/src/css/bootstrap-datetimepicker.min.css" />
    </environment>


</head>
@inject ISignInManager<ApplicationUser> SignInManager
@inject IUserManager<ApplicationUser> UserManager


<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    @await Html.PartialAsync("Modal/FormsModal.cshtml")
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="main-content">
            <div class="main-content__tree" id="tree">
            </div>
            <div class="main-content__body" id="main-content">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        <div style="width:100%; height:90vh;">
            @RenderBody()
        </div>
    }


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/htmlToPdf/xepOnline.jqPlugin.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/moment-with-locales.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/medicalCertificates.js"></script>
        <link href="~/lib/fancytree-2.30.2/dist/skin-win8/ui.fancytree.min.css" rel="stylesheet">
        <script src="~/lib/fancytree-2.30.2/dist/jquery.fancytree-all-deps.min.js"></script>
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap-datetimepicker-master/src/js/bootstrap-datetimepicker.js"></script>
        <script src="~/js/treeLoader.js"></script>
                </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/htmlToPdf/xepOnline.jqPlugin.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/moment-with-locales.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/medicalCertificates.js"></script>
        <link href="~/lib/fancytree-2.30.2/dist/skin-win8/ui.fancytree.min.css" rel="stylesheet">
        <script src="~/lib/fancytree-2.30.2/dist/jquery.fancytree-all-deps.min.js"></script>
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/bootstrap-datetimepicker-master/src/js/bootstrap-datetimepicker.js"></script>
        <script src="~/js/treeLoader.js"></script>
    </environment>
    <style>
        ul.fancytree-container {
            border: none;
        }

        ul:focus {
            outline: none;
        }

        .non-selectable {
            user-select: none;
        }

        @@media print {
            
            table {
                font-size: 14px;
                white-space: normal;
                word-wrap: break-word;
            }

            table tr td {
                padding: 5px 3px;
            }


        }
    </style>
    @RenderSection("Scripts", required: false)

</body>
</html>
