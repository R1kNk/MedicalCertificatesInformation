@model IReadOnlyList<Course>

<table class="table table-hover table-condensed">

    <thead>
        <tr>
            <th>Номер</th>
            <th>Количество групп</th>
            <th>Отделение</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var course in Model)
        {
            var groupCount = course.Groups.Count;
        <tr onclick="GetDetailsCourseRequest(@course.Id)">
            <td>@course.Number курс</td>
            <td>@groupCount</td>
            <td>@course.Department.Name</td>
        </tr>
         }
    </tbody>

</table>