@model IReadOnlyList<Group>

<table class="table table-hover table-condensed">

    <thead>
        <tr>
            <th>Группа</th>
            <th>Количество студентов</th>
            <th>Курс</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var group in Model)
        {
            var studentsCount = group.Students.Count;
        <tr class="cursor-pointer" onclick="GetDetailsGroupRequest(@group.Id)">
            <td>@group.Name</td>
            <td>@studentsCount</td>
            <td>@group.Course.Number-й курс</td>
        </tr>
        }
    </tbody>

</table>