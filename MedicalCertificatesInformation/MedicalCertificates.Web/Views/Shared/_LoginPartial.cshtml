@using Microsoft.AspNetCore.Identity
@using MedicalCertificates.Web.Models

@inject ISignInManager<ApplicationUser> SignInManager
@inject IUserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var pseudonim = user.Pseudonim;

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

        <ul style="margin-right:30px" class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выйти из аккаунта</button>
            </li>
        </ul>
    </form>
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Здравствуйте @pseudonim!</a>
        </li>
        @if (await UserManager.IsInRoleAsync(user, "Admin"))
        {
            <li class="dropdown">
                <a id="drop1" href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Панель администратора
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><button style="width:100%;" class="btn btn-default" onclick="GetCreateAccountRequest()">Зарегистрировать пользователя</button></li>
                    @*<li><button style="width:100%;" class="btn btn-default">Управление пользователями</button></li>*@
                    <li><button style="width:100%;" class="btn btn-default" onclick="GetIndexPhysicalEducationRequest()">Управление группами по физкультуре</button></li>
                    <li><button style="width:100%;" class="btn btn-default" onclick="GetIndexHealthGroupRequest()">Управление группами здоровья</button></li>
                    <li><button style="width:100%;" class="btn btn-default" onclick="GetIndexHospitalRequest()">Управление инфомрацией о поликлиниках</button></li>

                </ul>
            </li>
        }

    </ul>

}

